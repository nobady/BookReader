<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/reader_bottom_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:gravity="center_vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="1px"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/decrease"
            android:layout_gravity="center"
            android:src="@drawable/reader_zoom_out"
            android:scaleType="center"
            android:contentDescription="@string/font"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/reader_menu_divider_color"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/increase"
            android:src="@drawable/reader_zoom_in"
            android:scaleType="center"
            android:layout_marginLeft="1px"
            android:contentDescription="@string/font"/>
    </LinearLayout>

</LinearLayout>