<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/subscription_tips_price"
        android:textColor="@color/subscription_tips_price_color"
        android:paddingLeft="5dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:textSize="15sp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@drawable/diver_line"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="6dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        >

        <TextView
            android:id="@+id/my_overage"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="@color/my_consumption"
            />

        <Button
            android:id="@+id/recharge_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg"
            android:textColor="@color/white"
            android:layout_marginRight="5dp"
            android:textSize="16sp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="3dp"
            android:paddingBottom="6dp"
            android:text="@string/recharge"
            />

        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@drawable/diver_line"
        />

    <CheckBox
        android:id="@+id/select_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/checkbox_selector"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:paddingLeft="34dp"
        android:text="@string/select_all"
        style="@style/list_item_style"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@drawable/diver_line"
        />

</LinearLayout>