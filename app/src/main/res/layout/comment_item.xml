<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:layout_marginTop="8dp"
    android:gravity="center_vertical"
    >

    <com.sanqiwan.reader.webimageview.WebImageView
        android:id="@+id/user_image"
        android:layout_width="@dimen/user_image_width"
        android:layout_height="@dimen/user_image_height"
        android:src="@drawable/comment_user_image"
        android:scaleType="fitXY"
        android:contentDescription="@null"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_image"
        android:textSize="@dimen/autocomplete_text_size"
        android:typeface="monospace"
        android:textColor="@color/info_detail"
        android:gravity="left|center_vertical"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toLeftOf="@+id/comment_time"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        />

    <TextView
        android:id="@+id/comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/user_name"
        android:gravity="right|center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="@dimen/volume_item_size"
        android:typeface="monospace"
        android:textColor="@color/info_detail"
        android:layout_marginTop="8dp"

        />
    <TextView
        android:id="@+id/comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_image"
        android:layout_below="@id/user_name"
        android:textSize="14sp"
        android:typeface="monospace"
        android:textColor="@color/info_detail"
        android:gravity="left"
        android:lineSpacingExtra="5dp"
        android:layout_marginTop="12dp"
        android:layout_alignLeft="@id/user_name"
        />
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@drawable/diver_line"
        android:layout_marginTop="8dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/comment_content"
        />
</RelativeLayout>