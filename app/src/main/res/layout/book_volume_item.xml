<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="14dp"
    android:paddingRight="14dp"
    android:minHeight="@dimen/volume_item"
    android:gravity="center_vertical"
    >

    <TextView
        android:id="@+id/dir_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="@dimen/volume_item_size"
        android:textColor="@color/volume_item_color"
        android:gravity="left|center_vertical"
        android:typeface="monospace"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toLeftOf="@+id/dir_pageNum"
        />

    <TextView
        android:id="@+id/dir_pageNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/dir_title"
        android:gravity="right|center_vertical"
        android:typeface="monospace"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="@dimen/volume_item_size"
        android:textColor="@color/volume_item_color"
        />
    <ImageView
        android:id="@+id/vip_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_vip"
        android:layout_toLeftOf="@id/dir_pageNum"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:visibility="gone"
        />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@drawable/diver_line"
        android:layout_marginTop="8dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/dir_title"
        />
</RelativeLayout>