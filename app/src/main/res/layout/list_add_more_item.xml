<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/comment_margin_left"
    >
    <View android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="45dp"
        android:padding="20dp"
        android:background="@drawable/list_add_more_bg"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/add_more_icon"
        android:textSize="18sp"
        android:drawablePadding="10dp"
        android:textColor="@color/list_item_describe_color"
        android:text="@string/add_more_book"
        android:layout_gravity="center"/>

</FrameLayout>